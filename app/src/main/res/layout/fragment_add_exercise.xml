<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Spinner
            android:id="@+id/exercisesSpinner"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toTopOf="@+id/dateEditText"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintVertical_bias="0.543"/>


        <EditText
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:id="@+id/dateEditText"
            android:ems="15"
            android:inputType="text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="Date"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/milesEditText"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="21dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:id="@+id/milesEditText"
            android:ems="15"
            android:inputType="text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:hint="Miles"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/saveButton"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="76dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>

        <Button
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableTop="@drawable/ic_done_white_24dp"
            android:text="Save"
            android:textColor="@color/colorTextIcons"
            android:background="@color/colorAccent"
            android:id="@+id/saveButton"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="271dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/formTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Log your exercise"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"/>


</FrameLayout>
